{% spaceless %}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <title>{{ page_title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="{{ resource.bootstrap_css }}" rel="stylesheet">
    <style>
        body {
            padding-top: 60px;
        }

        h2 a {
            color: #5f5f5f;
        }
    </style>
    <link href="{{ resource.bootstrap_responsive_css }}" rel="stylesheet">
    <script type="text/javascript" src="{{ resource.jquery_js }}"></script>
    <script type="text/javascript" src="{{ resource.ldt_js }}"></script>
    <script type="text/javascript" src="{{ resource.bootstrap_js }}"></script>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="{{ resource.html5shim_js }}"></script>
    <![endif]-->
</head>

<body>

<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="/">{{ page_title }}</a>
            <!--<div class="nav-collapse">
                <ul class="nav">
                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="#about">About</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </div>-->
            <div class="pull-right">
                {% if not current_user %}
                <!--<form class="navbar-form form-inline" action="/login" method="POST">
                    <input type="text" class="input-small" placeholder="Логин" name="login">
                    <input type="password" class="input-small" style="margin-left: 2px;" placeholder="Пароль" name="password">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                    <button type="submit" class="btn" style="margin-bottom: 0;">Войти</button>
                </form>-->
                <script src="http://ulogin.ru/js/ulogin.js"></script>
                <div style="margin-bottom: 0; margin-top: 10px;" id="uLogin"
                     x-ulogin-params="display=small;fields=first_name,email;optional=last_name,nickname,photo,bdate,sex,photo_big;providers=vkontakte,odnoklassniki,mailru,facebook,twitter;hidden=;redirect_uri=http%3A%2F%2F{{ http_host }}%2Fopenauth%3Fcsrf_token%3D{{ csrf_token }}"></div>
                {% else %}
                <ul class="nav">
                    <li class="dropdown" id="menu1">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">
                            {% if current_user.photo %}
                            <img src="{{ current_user.photo }}" alt="" width="22" height="22" />&nbsp;
                            {% endif %}{% if current_user.full_name %}&nbsp;&nbsp;{{ current_user.full_name }}
                            {% else %}{{ current_user.login }}
                            {% endif %}
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/profile/{{ current_user.id }}.html">Мой профиль</a></li>
                            <li class="divider"></li>
                            <li><a href="/logout?csrf_token={{ csrf_token }}">Выход</a></li>
                        </ul>
                    </li>
                </ul>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="container">
    {% block body %}{% endblock %}
</div> <!-- /container -->
<script type="text/javascript">
    $(document).ready(function() {
        var ldt = new LocalizedDate(4);
        $(".dtl10n").each(function() {
            $(this).html(ldt.localize($(this).html())).removeClass("dtl10n")
        })
    })
</script>
</body>
</html>
{% endspaceless %}