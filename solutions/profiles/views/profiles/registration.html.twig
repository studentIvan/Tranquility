{% extends 'skeleton.html.twig' %}
{% block body %}{% if not complete %}
{% if flash_error %}<div class="alert alert-error ui-overlay-e">
    {{ flash_error }}
</div>{% endif %}
<form action="/registration.html" method="POST" class="well" role="form">
    <fieldset>
        <legend>Регистрация</legend>
        <div class="form-group">
            <label for="logininput">
                Логин:
            </label>
            <input id="logininput" class="form-control" name="xcya94n8cdjscam{{ form_code }}"
                   value="{{ x_login }}" type="text" required="required" />
        </div>
        <div class="form-group">
            <label for="emailinput">
                Email:
            </label>
            <input id="emailinput" class="form-control" name="e7a9fg0h790awf{{ form_code }}"
                   value="{{ x_email }}" type="email" required="required" />
        </div>
        <div class="form-group">
            <label for="passinput">
                Пароль:
            </label>
            <input id="passinput" class="form-control" name="p218398s9gdy{{ form_code }}"
                   value="" type="password" required="required" />
        </div>
        <div class="form-group">
            <label for="pass2input">
                Повторите пароль:
            </label>
            <input id="pass2input" class="form-control" name="padm8300092gdy{{ form_code }}"
                   value="" type="password" required="required" />
        </div>
        <div class="form-group">
            <label for="captcha">
                <div><img src="/captcha/{{ csrf_token }}.png?access={% if rrr %}{{ rrr }}{% else %}first{% endif %}"></div>
                <div>Текст с картинки:</div>
            </label>
            <input id="captcha" class="form-control" name="cydas89gfy8431sas{{ form_code }}"
                   value="" type="text" required="required" />
        </div>
    </fieldset>
    <input type="submit" class="btn btn-primary" value="Зарегистрироваться" />
</form>
{% else %}
<p>Регистрация завершена успешно</p>
{% if cms.email_confirm %}<p>Для завершения регистрации откройте ваш email и пройдите по ссылке подтверждения</p>{% endif %}
<p><a href="/">Вернуться на главную</a></p>
{% endif %}{% endblock %}